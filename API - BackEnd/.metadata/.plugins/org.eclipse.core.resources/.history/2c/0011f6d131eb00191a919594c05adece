package com.example.demo.helper;

import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class ValidationData {

	public static boolean validarEmail(String email) {
		boolean isEmailIdValid = false;
		if (email != null && email.length() > 0) {
			String expression = "^[\\w\\.-]+@([\\w\\-]+\\.)+[A-Z]{2,4}$";
			Pattern pattern = Pattern.compile(expression, Pattern.CASE_INSENSITIVE);
			Matcher matcher = pattern.matcher(email);
			if (matcher.matches()) {
				isEmailIdValid = true;
			}
		}
		return isEmailIdValid;
	}

	public static boolean validarNome(String nome) {
		return nome.matches("^[a-zA-Z]*$");

	}

	public static boolean validarNomeTamanho(String nome) {

		return nome.length() >= 2 && nome.length() <= 30;

	}

	public static boolean validarSobrenome(String sobrenome) {
		return sobrenome.matches("^[a-zA-Z]*$");

	}

	public static boolean validarSobrenomeTamanho(String sobrenome) {
		return sobrenome.length() >= 2 && sobrenome.length() <= 50;
	}

	public static boolean validarSobrenomeTamanho(String sobrenome) {

		return sobrenome.length() >= 2 && sobrenome.length() <= 50;

	}

}
